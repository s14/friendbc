<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Facebook</th>
      <th>Friend</th>
      <th>Message</th>
      <th>Link</th>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Fb created time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.facebook_id %></td>
        <td><%= post.friend.name %></td>
        <td><%= post.message %></td>
        <td>
          <iframe width="560" height="315" src="//www.youtube.com/embed/<%= Rack::Utils.parse_nested_query(URI.parse(post.link).query)["v"] %>" frameborder="0" allowfullscreen></iframe>
        </td>
        <td><%= post.name %></td>
        <td><%= post.description %></td>
        <td><%= post.picture %></td>
        <td><%= post.fb_created_time %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
