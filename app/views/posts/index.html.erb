<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Facebook</th>
      <th>Friend</th>
      <th>Message</th>
      <th>Link</th>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Fb created time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.facebook_id %></td>
        <td><%= post.friend %></td>
        <td><%= post.message %></td>
        <td><%= post.link %></td>
        <td><%= post.name %></td>
        <td><%= post.description %></td>
        <td><%= post.picture %></td>
        <td><%= post.fb_created_time %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
